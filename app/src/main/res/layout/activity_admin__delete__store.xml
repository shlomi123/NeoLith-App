<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ADMIN_DELETE_STORE">


    <Button
        android:id="@+id/buttonDeleteByStoreName"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="by Store Name" />

    <Button
        android:id="@+id/buttonDeleteByAddress"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonDeleteByStoreName"
        android:layout_marginTop="30dp"
        android:text="by Address" />

    <Button
        android:id="@+id/buttonDeleteByEmail"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonDeleteByAddress"
        android:layout_marginTop="30dp"
        android:text="by Email" />

    <Button
        android:id="@+id/buttonDeleteByPhoneNumber"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonDeleteByEmail"
        android:layout_marginTop="30dp"
        android:text="by Phone Number" />

</RelativeLayout>