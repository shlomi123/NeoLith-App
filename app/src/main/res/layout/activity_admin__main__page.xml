<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ADMIN_MAIN_PAGE">

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="142dp"
        android:text="DELETE" />

    <Button
        android:id="@+id/buttonAddStore"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/buttonViewOrders"
        android:text="ADD STORE" />

    <Button
        android:id="@+id/buttonViewOrders"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp"
        android:layout_marginStart="29dp"
        android:text="VIEW ORDERS" />

    <Button
        android:id="@+id/buttonAddProduct"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_alignStart="@+id/buttonViewOrders"
        android:layout_alignTop="@+id/buttonDelete"
        android:text="ADD PRODUCT" />

</RelativeLayout>