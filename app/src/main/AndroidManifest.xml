<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shlomi123.chocolith">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".APP_INITIALIZATION">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ADMIN_MAIN_PAGE" />
        <activity android:name=".ADMIN_ADD_STORE" />
        <activity android:name=".ADMIN_STORE_ID" />
        <activity android:name=".ADMIN_DELETE_STORE" />
        <activity android:name=".ADMIN_CHOOSE_STORE_TO_DELETE" />
        <activity android:name=".CLIENT_MAIN_PAGE" />
        <activity android:name=".CLIENT_QR_SCANNER" />
        <activity android:name=".LOGIN"/>
    </application>

</manifest>